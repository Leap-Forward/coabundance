{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "plugins": [
    "react",
    "jsx-a11y",
    "import",
    "react-native"
  ],
  "globals": {
    "fetch": true,
    "__DEV__": true
  },
  "env": {
    "jest": true,
    "browser": true
  },
  "rules": {
    "max-len": [
      "error",
      {
        "code": 120
      }
    ],
    "no-param-reassign": [2, {"props": true}],
    "no-underscore-dangle": [
      "error",
      {
        "allow": [
          "_id"
        ]
      }
    ],
    "no-shadow": 0,
    "no-unused-expressions": [
      "error",
      {
        "allowTernary": true
      }
    ],
    "react/prop-types": 0,
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "import/no-named-as-default": 0,
    "import/no-named-as-default-member": 0,
    "class-methods-use-this": 0,
    "no-console": "off",
    "spaced-comment": "off",
    "no-alert": "off",
    "react/prefer-stateless-function": "off",
    "camelcase": "off"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".android.js",
          ".ios.js"
        ]
      }
    }
  }
}
